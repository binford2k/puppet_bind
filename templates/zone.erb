;
; BIND data file for <%= @name %>
;
@       IN      SOA     <%= @name %>. root.<%= @name %>. (
                 <%= Time.now.strftime( '%Y%m%d%H%M%S' ) %>         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Default TTL

